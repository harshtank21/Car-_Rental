<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_inherit">
        <field name="name">res.config.settings.view.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='shipping_provider_mondialrelay_setting']" position="after">
                <div class="col-xs-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_covid"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_covid"/>
                        <div class="text-muted" >
                            Covid Alert
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>